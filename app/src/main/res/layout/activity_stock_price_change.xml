<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Stock_Price_Change">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="@string/price_update_page"
        app:titleCentered="true"
        app:titleTextAppearance="@style/ToolbarTitleBold" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:padding="20dp"
        android:scrollbarStyle="insideOverlay"
        android:verticalScrollbarPosition="right"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Record ID Title -->
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/title_update_record"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Record ID Input -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/ET_HintRecordId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/ET_RecordId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_update_record"
                    android:inputType="number"
                    tools:ignore="VisualLintTextFieldSize" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:id="@+id/LL_layoutPurchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView android:text="Purchase ID: "
                    android:textSize="15sp"
                    android:id="@+id/tvPurchaseId"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <TextView android:text="Product Name: "
                    android:textSize="15sp"
                    android:id="@+id/tvPurchaseProduct"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <TextView android:text="Total No. Product: "
                    android:textSize="15sp"
                    android:id="@+id/tvPurchaseQty"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <TextView android:text="No. Product Left: "
                    android:textSize="15sp"
                    android:id="@+id/tvPurchaseQtyLeft"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <TextView android:text="Existing Price: "
                    android:textSize="15sp"
                    android:id="@+id/tvPurchasePrice"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <TextView android:text="Created Date: "
                    android:textSize="15sp"
                    android:id="@+id/tvCreatedDate"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_PriceFields"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Record ID Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/title_update_price"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Record ID Input -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <EditText
                        android:id="@+id/ET_NewPrice"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="@string/hint_update_price"
                        android:inputType="number"
                        tools:ignore="VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <GridLayout
                android:id="@+id/buttonGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:columnCount="3"
                android:useDefaultMargins="true"
                android:alignmentMode="alignMargins"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Btn_Proceed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="@string/delete_but_proceed"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    tools:ignore="VisualLintButtonSize" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Btn_Update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="@string/update_button"
                    android:backgroundTint="@color/blue"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    tools:ignore="VisualLintButtonSize" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Btn_Back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="@string/back"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    tools:ignore="VisualLintButtonSize" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>